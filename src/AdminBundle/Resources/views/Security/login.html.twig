{% extends "AdminBundle::layout.html.twig" %}

{% block title %}Login - Admin{% endblock %}
{% block other_stylesheets %}
<link rel="stylesheet" href="{{ asset('/static/css/login.css') }}" />
{% endblock %}

{% block content %}
    

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}




<form class="form-login" action="{{path('adm_login_check')}}" method="post">
    <h2>Please Login:</h2>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('_csrf_token_id') }}" />
    <div class="form-group">
        {{ form_widget(form.account, {"attr": {"class": "form-control", "placeholder": form.account.vars.label}}) }}
        {{ form_widget(form.passwd, {"attr": {"class": "form-control", "placeholder": form.passwd.vars.label}}) }}
    </div>
    <div class="checkbox">
        <label for="{{ form.remember_me.vars.id }}">{{ form_widget(form.remember_me) }} {{ form.remember_me.vars.label }}</label>
    </div>
    <div class="form-group">
        {{ form_widget(form.login_submit, {"attr": {"class": "btn btn-primary btn-lg btn-block"}}) }}
    </div>
</form>
{% endblock %}